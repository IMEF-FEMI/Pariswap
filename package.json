{
  "name": "pariswap",
  "version": "0.3.0",
  "license": "MIT",
  "author": "bolajifemi28@gmail.com",
  "repository": "https://github.com/IMEF-FEMI/Pariswap",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/pariswap.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test --passWithNoTests",
    "ci": "pnpm run lint && pnpm run build",
    "release": "pnpm run lint && pnpm run build && changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 50000
  },
  "peerDependencies": {
    "@hxronetwork/parimutuelsdk": ">=1.0.26",
    "react": ">=16",
    "react-dom": ">=16"
  },
  "engines": {
    "node": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/pariswap.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/pariswap.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@hxronetwork/parimutuelsdk": "^1.0.26",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.77.3",
    "@tsconfig/recommended": "^1.0.2",
    "@tsconfig/vite-react": "^2.0.0",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "dotenv": "^16.3.1",
    "dts-cli": "^2.0.3",
    "fetch": "^1.1.0",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "size-limit": "^8.2.4",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "bigint-buffer": "^1.1.5"
  }
}
